<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".fragments.CircleAreaFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="To calculate area of the circle"
        android:textColor="@color/background"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter radius of the circle"
        android:inputType="numberDecimal"
        android:textColor="@color/background"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCalculateArea"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/background"
        android:text="Calcuate area"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvCircleArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Result"
        android:textColor="@color/background"
        android:textSize="20sp" />

</LinearLayout>